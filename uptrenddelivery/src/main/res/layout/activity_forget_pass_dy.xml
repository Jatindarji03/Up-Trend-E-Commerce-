<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <RelativeLayout
        android:id="@+id/top_anim3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:background="@drawable/blue_top"
        android:translationX="-1.20dp">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/fire" />

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:src="@drawable/fire" />

        <TextView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_65sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/miltonian_tattoo"
            android:text="Up Trend"
            android:textColor="@color/black"
            android:textSize="@dimen/_21ssp" />


        <TextView
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_65sdp"
            android:layout_marginTop="@dimen/_35sdp"
            android:fontFamily="@font/miltonian_tattoo"
            android:text="Delivery"
            android:textColor="@color/black"
            android:textSize="@dimen/_39ssp" />


    </RelativeLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_100sdp"
        tools:context=".forgetPass_dy">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="@dimen/_300sdp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="@dimen/_50sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_20sdp"
                    app:cardMaxElevation="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:fontFamily="@font/gelasio"
                        android:gravity="center"
                        android:text="yo! Forget Your Password?"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_42sdp"
                        android:fontFamily="@font/gelasio"
                        android:gravity="center"
                        android:text="No worries! Enter your email and we will send You a reset link."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp" />


                    <EditText
                        android:id="@+id/email_forget"
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_120sdp"
                        android:background="@drawable/edittext_touch_effect"
                        android:drawableStart="@drawable/email_vector_effect"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/gelasio"
                        android:hint="email"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textSize="18sp" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_forget_delivery"
                        android:layout_width="250dp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_210sdp"
                        android:background="#43C5FF"
                        android:fontFamily="@font/gelasio"
                        android:text="Send Request"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/shine_btn_Sign3"
                        android:layout_width="25dp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_9sdp"
                        android:layout_marginTop="@dimen/_210sdp"
                        android:background="@drawable/shine_btn" />


                    <TextView
                        android:id="@+id/back_To_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_84sdp"
                        android:layout_marginTop="@dimen/_260sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="Back to log in"
                        android:textColor="#049FE4"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="470dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/instruction_click"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:drawableEnd="@drawable/down_key"
                        android:fontFamily="@font/brygada_1918"
                        android:text="Instruction"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold">

                    </TextView>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="@dimen/_225sdp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="505dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="#9BE7F1"
                    app:cardCornerRadius="10dp">


                    <TextView
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_200sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="1. You enter the email of your log in id here."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_55sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="2. Click reset button and check your email."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_95sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="3. Open your email and check the link of reset password."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_135sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="4. Click the link and reset your password."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_176sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="5. You can fill your new password in log in."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp" />


        </LinearLayout>


    </ScrollView>


</RelativeLayout>
