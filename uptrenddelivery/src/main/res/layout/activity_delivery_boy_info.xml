<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/top_anim4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:background="@drawable/blue_top"
        android:translationX="-1.20dp">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/fire" />

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:src="@drawable/fire" />

        <TextView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_65sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/miltonian_tattoo"
            android:text="Up Trend"
            android:textColor="@color/black"
            android:textSize="@dimen/_21ssp" />


        <TextView
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_65sdp"
            android:layout_marginTop="@dimen/_35sdp"
            android:fontFamily="@font/miltonian_tattoo"
            android:text="Delivery"
            android:textColor="@color/black"
            android:textSize="@dimen/_39ssp" />


        <ProgressBar
            android:id="@+id/progress_delivery_info"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/_190sdp"
            android:layout_marginTop="@dimen/_82sdp"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/circular" />

        <TextView
            android:id="@+id/text_per_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_216sdp"
            android:layout_marginTop="@dimen/_107sdp"
            android:fontFamily="@font/brygada_1918"
            android:text="0%"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_160sdp"
            app:cardBackgroundColor="#FFEB3B">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_37sdp"
                android:fontFamily="@font/miltonian_tattoo"
                android:gravity="center"
                android:text="Delivery Boy Information"
                android:textColor="@color/black"
                android:textSize="@dimen/_21ssp" />


        </androidx.cardview.widget.CardView>


    </RelativeLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_198sdp"
        tools:context=".delivery_boy_info">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_290sdp"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_20sdp"
                app:cardMaxElevation="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_17sdp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="@dimen/_90sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="Delivery Boy Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/name_dy_info"
                        android:layout_width="@dimen/_260sdp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:background="@drawable/edittext_touch_effect"
                        android:fontFamily="@font/brygada_1918"
                        android:hint="First and Last Name"
                        android:imeOptions="actionDone"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="#B8E7ED"
                            android:fontFamily="@font/gelasio"
                            android:paddingEnd="16dp"
                            android:text="current date"
                            android:textAlignment="textEnd"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/currentDateTextview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/brygada_1918"
                            android:paddingEnd="16dp"
                            android:textAlignment="textEnd"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/gelasio"
                            android:text="Enter Your Date of Birth:"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                        <DatePicker
                            android:id="@+id/datePicker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:calendarViewShown="false"
                            android:datePickerMode="spinner" />


                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:background="#FFEB3B"
                            android:fontFamily="@font/gelasio"
                            android:onClick="calculateAge"
                            android:text="Calculate Your Age"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/ageTextview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="#A3E6EF"
                            android:fontFamily="@font/brygada_1918"
                            android:padding="16dp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="@dimen/_60sdp"
                            android:fontFamily="@font/brygada_1918"
                            android:text="Delivery Boy Address"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />


                        <EditText
                            android:id="@+id/address_dy_info"
                            android:layout_width="@dimen/_260sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:background="@drawable/edittext_touch_effect"
                            android:fontFamily="@font/gelasio"
                            android:gravity="start"
                            android:hint="Fill Your Proper Adress"
                            android:imeOptions="actionDone"
                            android:importantForAutofill="no"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingEnd="@dimen/_13sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="@dimen/_74sdp"
                            android:fontFamily="@font/brygada_1918"
                            android:text="Vehicle Number"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/vehicle_no_dy"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="50dp"
                            android:layout_marginRight="@dimen/_27sdp"
                            android:background="@drawable/edittext_touch_effect"
                            android:fontFamily="@font/brygada_1918"
                            android:hint="Fill Vehicle Number"
                            android:imeOptions="actionDone"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="@dimen/_60sdp"
                            android:fontFamily="@font/brygada_1918"
                            android:text="Driver Mobile Number"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/driver_no_dy"
                            android:layout_width="@dimen/_250sdp"
                            android:layout_height="50dp"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:background="@drawable/edittext_touch_effect"
                            android:fontFamily="@font/brygada_1918"
                            android:hint="Mobile Number Number"
                            android:imeOptions="actionDone"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            android:maxLength="10"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="@dimen/_90sdp"
                            android:fontFamily="@font/brygada_1918"
                            android:text="Select State"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/spinner_state1"
                            style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                            android:layout_width="@dimen/_260sdp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginEnd="@dimen/_25sdp"
                            app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                            app:boxCornerRadiusTopStart="@dimen/_10sdp"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/txtState"
                                android:layout_width="@dimen/_260sdp"
                                android:layout_height="50dp"
                                android:background="#3303A9F4"
                                android:fontFamily="@font/gelasio"
                                android:hint="select state"
                                android:inputType="none"
                                android:textSize="@dimen/_13sdp" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="@dimen/_92sdp"
                            android:fontFamily="@font/brygada_1918"
                            android:text="Select City"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout

                            style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                            android:layout_width="@dimen/_260sdp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginEnd="@dimen/_25sdp"
                            app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                            app:boxCornerRadiusTopStart="@dimen/_10sdp"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/txtCity"
                                android:layout_width="@dimen/_260sdp"
                                android:layout_height="50dp"
                                android:background="#3303A9F4"
                                android:fontFamily="@font/gelasio"
                                android:hint="select city"
                                android:inputType="none"
                                android:textSize="@dimen/_13sdp" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="@dimen/_70sdp"
                            android:fontFamily="@font/brygada_1918"
                            android:text="Select Vehicle Type"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                            android:layout_width="@dimen/_260sdp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginEnd="@dimen/_25sdp"
                            app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                            app:boxCornerRadiusTopStart="@dimen/_10sdp"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/vehicle_type"
                                android:layout_width="@dimen/_260sdp"
                                android:layout_height="50dp"
                                android:background="#3303A9F4"
                                android:fontFamily="@font/gelasio"
                                android:hint="vehicle type"
                                android:inputType="none"
                                android:textSize="@dimen/_13sdp" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_delivery_info"
                            android:layout_width="230dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_50sdp"
                            android:background="#43C5FF"
                            android:fontFamily="@font/gelasio"
                            android:text="next"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/shine_btn4"
                            android:layout_width="40dp"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@drawable/shine_btn"
                            android:translationX="-135dp"
                            android:translationY="-47dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp" />


                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>

</RelativeLayout>
