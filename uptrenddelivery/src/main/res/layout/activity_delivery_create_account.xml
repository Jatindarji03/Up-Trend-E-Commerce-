<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".delivery_create_account">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/top_anim2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:background="@drawable/blue_top"
            android:translationX="-1.20dp">


            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/fire" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:src="@drawable/fire" />

            <TextView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_65sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/miltonian_tattoo"
                android:text="Up Trend"
                android:textColor="@color/black"
                android:textSize="@dimen/_21ssp" />


            <TextView
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_65sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:fontFamily="@font/miltonian_tattoo"
                android:text="Delivery"
                android:textColor="@color/black"
                android:textSize="@dimen/_39ssp" />


            <ProgressBar
                android:id="@+id/progress_create_account"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="@dimen/_190sdp"
                android:layout_marginTop="@dimen/_82sdp"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/circular" />

            <TextView
                android:id="@+id/text_ca_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_216sdp"
                android:layout_marginTop="@dimen/_107sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="0%"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />



        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_366sdp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="@dimen/_150sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_20sdp"
            app:cardMaxElevation="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/black_border"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_login2"
                    android:layout_width="@dimen/_128sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="3.20dp"
                    android:fontFamily="@font/brygada_1918"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="Log In"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_signup2"
                    android:layout_width="@dimen/_128sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/blue_circle"
                    android:fontFamily="@font/brygada_1918"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="Sign Up"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold" />

            </LinearLayout>


            <EditText
                android:id="@+id/name_ca_delivery"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_70sdp"
                android:background="@drawable/edittext_touch_effect"
                android:drawableStart="@drawable/person_vector_effect"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/brygada_1918"
                android:hint="First and Last Name"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="@dimen/_8sdp"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/mobile_no_ca_delivery"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_120sdp"
                android:background="@drawable/edittext_touch_effect"
                android:drawableStart="@drawable/phone_vector_effect"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/brygada_1918"
                android:hint="Mobile No"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="10"

                android:paddingStart="10dp"
                android:paddingEnd="@dimen/_8sdp"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/email_ca_delivery"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_170sdp"
                android:background="@drawable/edittext_touch_effect"
                android:drawableStart="@drawable/email_vector_effect"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/gelasio"
                android:hint="email"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="@dimen/_8sdp"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/password__ca_delivery"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_220sdp"
                android:drawableStart="@drawable/lock_vector_effect"
                android:background="@drawable/edittext_touch_effect"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/brygada_1918"
                android:hint="Password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:paddingEnd="@dimen/_8sdp"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/password_msg1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_15sdp"
                android:textSize="@dimen/_10ssp"
                android:textColor="#F43E05"
                android:fontFamily="@font/brygada_1918"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_260sdp"/>




            <CheckBox
                android:id="@+id/checkbox_ca_dy"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:text="show password"
                android:layout_marginTop="@dimen/_270sdp"
                android:fontFamily="@font/gelasio"
                android:textSize="@dimen/_13ssp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ca_delivery"
                android:layout_width="170dp"
                android:layout_height="@dimen/_35sdp"
                android:background="@color/black"
                android:layout_marginLeft="@dimen/_62sdp"
                android:layout_marginTop="@dimen/_310sdp"
                android:shadowRadius="20"
                android:textAlignment="center"
                android:text="Sign Up"
                android:textSize="18sp"
                android:fontFamily="@font/gelasio"
                android:textStyle="bold"
                android:textColor="@color/white"/>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/shine_btn_Sign2"
                android:layout_width="19dp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/shine_btn"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_310sdp" />






        </androidx.cardview.widget.CardView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:text="your account has been allready"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/brygada_1918"
            android:layout_marginTop="@dimen/_590sdp"
            android:layout_marginLeft="@dimen/_16sdp"/>

        <TextView
            android:id="@+id/login_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:text="LOG IN"
            android:textSize="@dimen/_17ssp"
            android:layout_marginTop="@dimen/_588sdp"
            android:fontFamily="@font/brygada_1918"
            android:layout_marginLeft="@dimen/_207sdp"
            android:textStyle="bold"
            android:textColor="@color/black"/>





    </RelativeLayout>


</LinearLayout>