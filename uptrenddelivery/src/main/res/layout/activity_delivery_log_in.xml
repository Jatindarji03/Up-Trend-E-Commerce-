<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".delivery_log_in">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/top_anim"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:background="@drawable/blue_top"
            android:translationX="-1.20dp">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/fire"
                app:lottie_loop="true" />



            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:src="@drawable/fire" />

            <TextView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_65sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/miltonian_tattoo"
                android:text="Up Trend"
                android:textColor="@color/black"
                android:textSize="@dimen/_21ssp" />


            <TextView
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_65sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:fontFamily="@font/miltonian_tattoo"
                android:text="Delivery"
                android:textColor="@color/black"
                android:textSize="@dimen/_39ssp" />


        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_330sdp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="@dimen/_150sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_20sdp"
            app:cardMaxElevation="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="@dimen/_260sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/black_border"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_login1"
                    android:background="@drawable/blue_circle"
                    android:layout_width="@dimen/_128sdp"
                    android:layout_marginTop="3.20dp"
                    android:layout_marginLeft="2dp"
                    android:layout_height="@dimen/_35sdp"
                    android:textAlignment="center"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="Log In"
                    android:fontFamily="@font/brygada_1918"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_signup1"
                    android:layout_width="@dimen/_128sdp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="1dp"
                    android:layout_height="@dimen/_35sdp"
                    android:textAlignment="center"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="Sign Up"
                    android:fontFamily="@font/brygada_1918"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold"/>


            </LinearLayout>



            <EditText
                android:id="@+id/email_login_delivery"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_40sdp"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:fontFamily="@font/brygada_1918"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableStart="@drawable/email_vector_effect"
                android:background="@drawable/edittext_touch_effect"
                android:layout_marginTop="@dimen/_70sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:paddingStart="10dp"
                android:paddingEnd="@dimen/_8sdp"
                android:hint="email"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/forget_password_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_120sdp"
                android:text="forget password"
                android:textColor="#0593D3"
                android:fontFamily="@font/gelasio"
                android:textSize="@dimen/_14ssp" />


            <EditText
                android:id="@+id/password_login_delivery"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_40sdp"
                android:hint="Password"
                android:imeOptions="actionDone"
                android:fontFamily="@font/brygada_1918"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableStart="@drawable/key_vector_effect"
                android:background="@drawable/edittext_touch_effect"
                android:layout_marginTop="@dimen/_145sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:paddingStart="10dp"
                android:paddingEnd="@dimen/_8sdp"
                android:inputType="textPassword"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkbox_login_dy"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:text="show password"
                android:layout_marginTop="@dimen/_187sdp"
                android:fontFamily="@font/gelasio"
                android:textSize="@dimen/_13ssp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_login_delivery"
                android:layout_width="170dp"
                android:layout_height="@dimen/_35sdp"
                android:background="@color/black"
                android:layout_marginLeft="@dimen/_62sdp"
                android:layout_marginTop="@dimen/_250sdp"
                android:shadowRadius="20"
                android:textAlignment="center"
                android:text="log in"
                android:textSize="18sp"
                android:fontFamily="@font/gelasio"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/shine_btn_Sign1"
                android:layout_width="19dp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/shine_btn"
                android:layout_marginLeft="@dimen/_47sdp"
                android:layout_marginTop="@dimen/_250sdp" />







        </androidx.cardview.widget.CardView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:text="Don't have an account?"
            android:textSize="@dimen/_15ssp"
            android:fontFamily="@font/brygada_1918"
            android:layout_marginTop="@dimen/_590sdp"
            android:layout_marginLeft="@dimen/_27sdp"/>

        <TextView
            android:id="@+id/new_account_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:text="SIGN UP"
            android:textSize="@dimen/_17ssp"
            android:layout_marginTop="@dimen/_588sdp"
            android:fontFamily="@font/brygada_1918"
            android:layout_marginLeft="@dimen/_195sdp"
            android:textStyle="bold"
            android:textColor="@color/black"/>



    </RelativeLayout>

</LinearLayout>
