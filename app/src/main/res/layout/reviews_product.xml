<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutContainerRating"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_176sdp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_166sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_3sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/productImageA2C"
                    android:layout_width="108dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
                    app:srcCompat="@drawable/ic_launcher_background" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_114sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:paddingEnd="10dp"
                        android:text="Rate Product"
                        android:textColor="#605B5B"
                        android:textSize="@dimen/_11ssp" />


                    <TextView
                        android:id="@+id/productBrandNameRA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_114sdp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/dm_serif_display"
                        android:text="Brand Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/productNameRA"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginLeft="@dimen/_114sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:paddingEnd="10dp"
                        android:text="Product Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />


                    <RatingBar
                        android:id="@+id/productReview"
                        android:layout_width="235dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="@dimen/_78sdp"
                        android:isIndicator="false"
                        android:max="5"
                        android:rating="3"
                        android:scaleX=".7"
                        android:scaleY=".7"
                        android:theme="@style/MyRatingBar" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/submit_rating_btn"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_110sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/btn_background_black"
                        android:fontFamily="@font/dm_serif_display"
                        android:text="submit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />


                </LinearLayout>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>

