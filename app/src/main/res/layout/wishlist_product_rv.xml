<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="@dimen/_265sdp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_248sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/likeProductImage"
                    android:layout_width="155dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
                    app:srcCompat="@drawable/ic_launcher_background" />


                <TextView
                    android:id="@+id/likeBrandName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/dm_serif_display"
                    android:text="Brand name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp" />


                <TextView
                    android:id="@+id/likeProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginLeft="9dp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="Product name"
                    android:textColor="#877D7D"
                    android:textSize="@dimen/_13ssp"
                    android:translationY="-5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:translationY="-8dp">


                    <TextView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/rupee_vector"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/likeProductSellingPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_serif_display"
                        android:text="599"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:background="@drawable/columan_vector"
                        android:backgroundTint="#8C8686">


                        <TextView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/rupee_vector"
                            android:backgroundTint="#8C8686"
                            android:textSize="@dimen/_10ssp" />


                        <TextView
                            android:id="@+id/likeProductOriginalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:fontFamily="@font/brygada_1918"
                            android:text="69999"
                            android:textColor="#8C8686"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/txtDiscount02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:fontFamily="@font/dm_serif_display"
                        android:text="25"
                        android:textColor="#08AC0F"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/percentage_vector"
                        android:textSize="@dimen/_12ssp" />


                    <TextView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_serif_display"
                        android:text="OFF"
                        android:textColor="#08AC0F"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:orientation="horizontal"
                    android:translationY="-6dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/likeDelete"
                        android:layout_width="@dimen/_29sdp"
                        android:layout_height="@dimen/_29sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:background="@drawable/btn_background_black"
                        android:drawableStart="@drawable/delete_vector22"
                        android:fontFamily="@font/dm_serif_display"
                        android:paddingStart="8.60dp" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/likeAddToBag"
                        android:layout_width="@dimen/_94sdp"
                        android:layout_height="@dimen/_27sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/btn_background"
                        android:backgroundTint="@color/black"
                        android:drawableStart="@drawable/add_to_bag_vector"
                        android:fontFamily="@font/dm_serif_display"
                        android:paddingStart="5dp"
                        android:text="Add to bag"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


</LinearLayout>