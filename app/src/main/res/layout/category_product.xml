<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewCategory"
    android:layout_width="@dimen/_134sdp"
    android:layout_height="@dimen/_230sdp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/productImageCategory"
            android:layout_width="147dp"
            android:layout_height="155dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            app:srcCompat="@drawable/ic_launcher_background" />


        <LinearLayout
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_13sdp"
            android:layout_marginTop="200dp"
            android:background="@drawable/rating_shape"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_rating_Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:drawableEnd="@drawable/star_vector"
                android:drawablePadding="1dp"
                android:fontFamily="@font/brygada_1918"
                android:text="4.9"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="@dimen/_6sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="2.50dp"
                android:background="@drawable/raw_vector" />


            <TextView
                android:id="@+id/txt_rating_count_Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/brygada_1918"
                android:text="1000"
                android:textColor="@color/white"
                android:textSize="@dimen/_9ssp" />


        </LinearLayout>


        <TextView
            android:id="@+id/brandName_Category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_135sdp"
            android:fontFamily="@font/dm_serif_display"
            android:paddingStart="@dimen/_15sdp"
            android:text="NIKE"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/productName_Category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_148sdp"
            android:fontFamily="@font/brygada_1918"
            android:paddingStart="@dimen/_14sdp"
            android:text="Men's Black T-Shirts"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_186sdp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/rupee_vector"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/productSellingPrice_Category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/brygada_1918"
                    android:text="599"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="@drawable/columan_vector"
                    android:backgroundTint="#8C8686">


                    <TextView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/rupee_vector"
                        android:backgroundTint="#8C8686"
                        android:textSize="@dimen/_10ssp" />


                    <TextView
                        android:id="@+id/product_original_price_Category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="69999"
                        android:textColor="#8C8686"
                        android:textSize="@dimen/_12ssp" />

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_203sdp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtDiscount01Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_serif_display"
                android:text="25"
                android:textColor="#08AC0F"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/percentage_vector"
                android:textSize="@dimen/_12ssp" />


            <TextView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_serif_display"
                android:text="OFF"
                android:textColor="#08AC0F"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>