<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".address_A2C">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            app:cardElevation="@dimen/_10sdp"
            app:cardBackgroundColor="#6BE7F6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/close_btn_address"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:drawableStart="@drawable/back11_vector"
                    android:paddingStart="7dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/dm_serif_display"
                    android:text="Add Delivery Address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18ssp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        app:cardElevation="@dimen/_10sdp">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save_address_btn"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_gravity="center"
            android:background="@drawable/btn_background"
            android:fontFamily="@font/dm_serif_display"
            android:text="Save Address"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_50sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_19sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="Enter Full Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />


            <EditText
                android:id="@+id/name_adress"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="@drawable/edittext_touch_effect"
                android:fontFamily="@font/brygada_1918"
                android:hint="Full Name"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="@dimen/_8sdp"
                android:textSize="18sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_19sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="Enter Phone No"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />


            <EditText
                android:id="@+id/phone_no_address"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="@drawable/edittext_touch_effect"
                android:fontFamily="@font/brygada_1918"
                android:hint="Mobile No"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="10"
                android:paddingStart="10dp"
                android:paddingEnd="@dimen/_8sdp"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/second_no_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableStart="@drawable/plus_vector"
                android:drawableTint="#056EC1"
                android:fontFamily="@font/brygada_1918"
                android:text="Add Alternate Phone Number"
                android:textColor="#056EC1"
                android:textSize="@dimen/_12ssp" />


            <LinearLayout
                android:id="@+id/layout_second_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/second_no_address"
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/edittext_touch_effect"
                    android:fontFamily="@font/brygada_1918"
                    android:hint="Mobile No"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingStart="10dp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:textSize="18sp" />


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_19sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="Enter Pincode"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />


            <EditText
                android:id="@+id/pincode_address"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="@drawable/edittext_touch_effect"
                android:fontFamily="@font/brygada_1918"
                android:hint="Pincode"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="6"
                android:paddingStart="10dp"
                android:paddingEnd="@dimen/_8sdp"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_19sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="Enter State"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />


                    <EditText
                        android:id="@+id/state_address"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:background="@drawable/edittext_touch_effect"
                        android:fontFamily="@font/brygada_1918"
                        android:hint="State"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textSize="18sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="Enter City"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />


                    <EditText
                        android:id="@+id/city_address"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:background="@drawable/edittext_touch_effect"
                        android:fontFamily="@font/brygada_1918"
                        android:hint="City"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textSize="18sp" />


                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_19sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="Enter House No., Building Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />


            <EditText
                android:id="@+id/house_adress"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="@drawable/edittext_touch_effect"
                android:fontFamily="@font/brygada_1918"
                android:hint="House No., Building Name"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="@dimen/_8sdp"
                android:textSize="18sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_19sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="Enter Road Name, Area, Colony"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />


            <EditText
                android:id="@+id/road_adress"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="@drawable/edittext_touch_effect"
                android:fontFamily="@font/brygada_1918"
                android:hint="Road Name, Area, Colony"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="@dimen/_8sdp"
                android:textSize="18sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_19sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="Type of adress"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />


            <RadioGroup
                android:id="@+id/radioGroupTypeOfAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButtonHome"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="2dp"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:background="@drawable/radio_selector"
                    android:button="@color/transparent" />


                <TextView
                    android:background="@drawable/home_vector"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_29sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    android:translationY="-29dp"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="Home"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:translationY="-50dp"/>



                <RadioButton
                    android:id="@+id/radioButtonWork"
                    android:layout_marginLeft="@dimen/_120sdp"
                    android:layout_marginTop="2dp"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:background="@drawable/radio_selector"
                    android:button="@color/transparent"
                    android:translationY="-95dp"/>


                <TextView
                    android:background="@drawable/work_vector"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_marginLeft="@dimen/_130sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    android:translationY="-124dp"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_150sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="Work"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:translationY="-145dp"/>


            </RadioGroup>


        </LinearLayout>


    </ScrollView>

</RelativeLayout>