                                    android:text="Badal Faliya, Char rasta,Machiwad, Bilimora 396321"
                                    android:textColor="#8F8D8D"
                                    android:textSize="@dimen/_13ssp"
                                    android:textStyle="bold" />




                            </androidx.cardview.widget.CardView>


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:layout_marginTop="1dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:layout_marginTop="@dimen/_5sdp"
                                app:cardElevation="@dimen/_4sdp">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/brygada_1918"
                                    android:paddingEnd="15dp"
                                    android:text="We hope you understand that we can only accept items for return, if they have not been used or damaged."
                                    android:textColor="#8F8D8D"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="65dp"
                                    android:fontFamily="@font/brygada_1918"
                                    android:paddingEnd="15dp"
                                    android:text="The brand's original packaging (if present), MRP tags/labels and accessories also need to be returned along with the item.Please ensure any personal data (in Electronic products) is erased."
                                    android:textColor="#8F8D8D"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold" />


                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="#70CAC1C1">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/brygada_1918"
                                android:paddingEnd="15dp"
                                android:text="By tapping on 'Submit Request' I agree to"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/terms_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="57dp"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/brygada_1918"
                                    android:paddingEnd="15dp"
                                    android:text="terms and condition"
                                    android:textColor="#052BFF"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/brygada_1918"
                                    android:paddingEnd="15dp"
                                    android:text="of refunds."
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold"
                                    android:translationX="-10dp" />

                            </LinearLayout>


                        </RelativeLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </RelativeLayout>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>