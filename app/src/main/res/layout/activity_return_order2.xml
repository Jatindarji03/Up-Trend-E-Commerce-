                            android:layout_width="match_parent"
                            android:layout_height="170dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:layout_marginTop="@dimen/_5sdp"
                                app:cardElevation="@dimen/_4sdp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_marginLeft="13dp"
                                    android:layout_marginTop="1dp"
                                    android:fontFamily="@font/brygada_1918"
                                    android:text="PICK UP AND DELIVERY"
                                    android:textAlignment="center"
                                    android:textColor="#807D7D"
                                    android:textSize="@dimen/_11ssp" />


                                <TextView
                                    android:id="@+id/userName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="23dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="25dp"
                                    android:fontFamily="@font/brygada_1918"
                                    android:text="Parthik Dhimmar"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14ssp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="53dp"
                                    android:drawableStart="@drawable/phone_vector24"
                                    android:drawableTint="#8F8D8D"
                                    android:paddingStart="2dp" />


                                <TextView
                                    android:id="@+id/mobileNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="45dp"
                                    android:layout_marginTop="51dp"
                                    android:fontFamily="@font/brygada_1918"
                                    android:text="7985455545"
                                    android:textColor="#8F8D8D"
                                    android:textSize="@dimen/_13ssp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="78dp"
                                    android:drawableStart="@drawable/location_vector"
                                    android:drawableTint="#8F8D8D"
                                    android:paddingStart="2dp" />


                                <TextView
