                        android:layout_height="86dp"
                        android:layout_marginLeft="250dp"
                        android:layout_marginTop="11dp"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
                        app:srcCompat="@drawable/ic_launcher_background" />


                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:orientation="horizontal"
                        android:visibility="visible">


                        <TextView
                            android:id="@+id/txtSize"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="1dp"
                            android:fontFamily="@font/brygada_1918"
                            android:text="8"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />


                        <!--                        <TextView-->
                        <!--                            android:layout_width="@dimen/_5sdp"-->
                        <!--                            android:layout_height="@dimen/_20sdp"-->
                        <!--                            android:layout_marginLeft="1dp"-->
                        <!--                            android:layout_marginTop="1dp"-->
                        <!--                            android:fontFamily="@font/brygada_1918"-->
                        <!--                            android:text=","-->
                        <!--                            android:textAlignment="center"-->
                        <!--                            android:textColor="@color/black"-->
                        <!--                            android:textSize="@dimen/_13ssp" />-->


                        <TextView
                            android:id="@+id/productColour"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="1dp"
                            android:fontFamily="@font/brygada_1918"
                            android:text="white"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />


                        <TextView
                            android:layout_width="@dimen/_5sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="3dp"
                            android:fontFamily="@font/brygada_1918"
                            android:text="|"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/brygada_1918"
                            android:text="Qty :"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />


                        <TextView
                            android:id="@+id/txtQty"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:fontFamily="@font/brygada_1918"
                            android:text="5"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/productPriceReturn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="65dp"
                        android:drawableStart="@drawable/rupee_vector"
                        android:fontFamily="@font/brygada_1918"
                        android:text="5999"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:translationY="-4dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    app:cardElevation="@dimen/_6sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="What do you want in return?"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />


                    <RadioButton
                        android:id="@+id/refund"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/brygada_1918"
                        android:paddingStart="@dimen/_4sdp"
                        android:text="Refund"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:translationY="-8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    app:cardElevation="@dimen/_6sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="1dp"
                            android:fontFamily="@font/brygada_1918"
                            android:text="Refund Amount :"
                            android:textAlignment="center"
                            android:textColor="#807D7D"
                            android:textSize="@dimen/_13ssp" />


                        <TextView
                            android:id="@+id/refundAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="1.60dp"
                            android:drawableStart="@drawable/rupee_vector24"
                            android:fontFamily="@font/brygada_1918"
                            android:text="5999"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <RadioButton
                            android:id="@+id/upi_btn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="35dp"
                            android:fontFamily="@font/brygada_1918"
                            android:paddingStart="@dimen/_4sdp"
