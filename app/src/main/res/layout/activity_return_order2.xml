                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/brygada_1918"
                                android:text="Get UPI ID linked to your registered phone number for payment partners"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp"
                                android:textStyle="bold" />


                            <EditText
                                android:id="@+id/upiId"
                                android:layout_width="280dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/brygada_1918"
                                android:hint="Enter UPI ID"
                                android:inputType="text"
                                android:textSize="@dimen/_12ssp"
                                android:translationY="-5dp" />


                        </LinearLayout>


                        <RadioButton
                            android:id="@+id/bank_account_btn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/brygada_1918"
                            android:paddingStart="@dimen/_4sdp"
                            android:text="Bank Account"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="19dp"
                            android:drawableStart="@drawable/timer_vector24"
                            android:drawablePadding="5dp"
                            android:drawableTint="#8F8D8D"
                            android:fontFamily="@font/brygada_1918"
                            android:text="Refund within 5-7 days of pick-up"
                            android:textColor="#8F8D8D"
                            android:textSize="@dimen/_11ssp"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:id="@+id/bank_account_layout"
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#8F8BDDE8"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/brygada_1918"
                                android:text="Enter valid information about your Bank Account"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp"
                                android:textStyle="bold" />


                            <EditText
                                android:id="@+id/accountName"
                                android:layout_width="280dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/brygada_1918"
                                android:hint="Account Holder Name"
                                android:inputType="text"
                                android:textSize="@dimen/_12ssp"
                                android:translationY="-5dp" />


                            <EditText
                                android:id="@+id/accountNumber"
                                android:layout_width="280dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:fontFamily="@font/brygada_1918"
                                android:hint="Enter Bank Account Number"
                                android:maxLength="18"
                                android:inputType="number"
                                android:textSize="@dimen/_12ssp"
                                android:translationY="-5dp" />


                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginTop="8dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                app:cardElevation="@dimen/_4sdp">


                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>


