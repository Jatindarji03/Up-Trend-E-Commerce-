<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_to_cart_product">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            app:cardBackgroundColor="#6BE7F6"
            app:cardElevation="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/close_btn_add_to_cart"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:drawableStart="@drawable/back11_vector"
                    android:paddingStart="7dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/dm_serif_display"
                    android:text="Bag"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18ssp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_62sdp"
        android:layout_alignParentBottom="true"
        app:cardElevation="@dimen/_15sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:drawableStart="@drawable/rupee_vector"
                    android:fontFamily="@font/dm_serif_display"
                    android:text="00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18ssp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/gelasio"
                    android:text="VIEW PRICE DETAILS"
                    android:textColor="#05DFFD"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold" />

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_buy_add_to_cart"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:background="@drawable/btn_background"
                android:fontFamily="@font/dm_serif_display"
                android:padding="@dimen/_1sdp"
                android:text="Continue"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_50sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:visibility="visible"
                    app:cardElevation="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/gelasio"
                                android:text="Deliver to :"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold" />


                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/change_btn_A2C"
                                android:layout_width="@dimen/_64sdp"
                                android:layout_height="@dimen/_28sdp"
                                android:layout_marginLeft="@dimen/_135sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/btn_background22"
                                android:fontFamily="@font/brygada_1918"
                                android:text="Change"
                                android:textColor="#05DBFA"
                                android:textSize="@dimen/_10ssp"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/name_A2C"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:fontFamily="@font/gelasio"
                                    android:text="Parthik Dhimmar"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15ssp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/address_A2C"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_23sdp"
                                    android:fontFamily="@font/brygada_1918"
                                    android:paddingEnd="@dimen/_10sdp"
                                    android:text="Badal faliya, Machiwad, Bilimora, near dhimmar panch, Bilimora 396321 "
                                    android:textColor="#5E5C5C"
                                    android:textSize="@dimen/_13ssp" />


                            </RelativeLayout>


                            <TextView
                                android:id="@+id/mobile_no_A2C"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:fontFamily="@font/brygada_1918"
                                android:text="6353394323"
                                android:textColor="#5E5C5C"
                                android:textSize="@dimen/_13ssp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_10sdp" />

                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleView_product_A2C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:id="@+id/layoutPriceDetails"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_175sdp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_155sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:visibility="visible"
                        app:cardElevation="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:fontFamily="@font/gelasio"
                                    android:text="Price Details"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14ssp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginLeft="@dimen/_7sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:text="("
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15ssp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/txtTotal"
                                    android:layout_width="@dimen/_22sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:fontFamily="@font/brygada_1918"
                                    android:text="10"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14ssp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="@dimen/_36sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:fontFamily="@font/brygada_1918"
                                    android:text="item"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14ssp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:text=")"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15ssp"
                                    android:textStyle="bold" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:fontFamily="@font/gelasio"
                                    android:text="Total Product Price"
                                    android:textColor="#6E6B6B"
                                    android:textSize="@dimen/_13ssp" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_57sdp"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:background="@drawable/plus_vector"
                                        android:backgroundTint="#6E6B6B" />


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:background="@drawable/rupee_vector"
                                        android:backgroundTint="#6E6B6B" />

                                    <TextView
                                        android:id="@+id/total_price_A2C"
                                        android:layout_width="@dimen/_70sdp"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/dm_serif_display"
                                        android:text="00"
                                        android:textColor="#6E6B6B"
                                        android:textSize="@dimen/_16ssp" />


                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:fontFamily="@font/gelasio"
                                    android:text="Total Discounts"
                                    android:textColor="#0A9C10"
                                    android:textSize="@dimen/_13ssp" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_79sdp"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:background="@drawable/minus_vector"
                                        android:backgroundTint="#0A9C10" />


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:background="@drawable/rupee_vector"
                                        android:backgroundTint="#0A9C10"
                                        android:textColor="#0A9C10" />

                                    <TextView
                                        android:id="@+id/discount_price_A2C"
                                        android:layout_width="@dimen/_70sdp"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/dm_serif_display"
                                        android:text="00"
                                        android:textColor="#0A9C10"
                                        android:textSize="@dimen/_16ssp" />


                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="@dimen/_280sdp"
                                    android:layout_height="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:background="@drawable/columan_vector" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:fontFamily="@font/gelasio"
                                        android:text="Order Total"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_15ssp"
                                        android:textStyle="bold" />


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_110sdp"
                                        android:layout_marginTop="@dimen/_7sdp"
                                        android:orientation="horizontal">


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/_15sdp"
                                            android:layout_marginLeft="@dimen/_10sdp"
                                            android:background="@drawable/rupee_vector" />

                                        <TextView
                                            android:id="@+id/total_order_A2C"
                                            android:layout_width="@dimen/_75sdp"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/dm_serif_display"
                                            android:text="00"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_17ssp" />


                                    </LinearLayout>


                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp" />
            </LinearLayout>


        </RelativeLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_46sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bottom_background"
        android:elevation="2dp"
        android:visibility="gone"
        app:itemIconSize="22dp"
        app:itemIconTint="@drawable/navigation_vactor_selector"
        app:itemRippleColor="@android:color/transparent"
        app:itemTextAppearanceActive="@style/nevigation_text"
        app:itemTextAppearanceInactive="@style/nevigation_text"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_menu" />


</RelativeLayout>
