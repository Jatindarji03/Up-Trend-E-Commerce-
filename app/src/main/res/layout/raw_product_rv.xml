<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="@dimen/_134sdp"
    android:layout_height="@dimen/_200sdp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/productImage"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            app:srcCompat="@drawable/ic_launcher_background" />


        <LinearLayout
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_100sdp"
            android:background="@drawable/rating_shape2"
            android:backgroundTint="@color/white"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtTotalRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:drawableStart="@drawable/star_vector2"
                android:drawableTint="#F3DB07"
                android:fontFamily="@font/brygada_1918"
                android:text="4.9"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold" />


        </LinearLayout>


        <TextView
            android:id="@+id/brandName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_126sdp"
            android:fontFamily="@font/dm_serif_display"
            android:paddingStart="@dimen/_15sdp"
            android:text="NIKE"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_142sdp"
            android:fontFamily="@font/brygada_1918"
            android:paddingStart="@dimen/_14sdp"
            android:text="Men's Black T-Shirts"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_160sdp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/rupee_vector"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/productSellingPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_serif_display"
                    android:text="599"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="@drawable/columan_vector"
                    android:backgroundTint="#8C8686">


                    <TextView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/rupee_vector"
                        android:backgroundTint="#8C8686"
                        android:textSize="@dimen/_10ssp" />


                    <TextView
                        android:id="@+id/text_product_original_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="69999"
                        android:textColor="#8C8686"
                        android:textSize="@dimen/_12ssp" />

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_175sdp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtDiscount01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_serif_display"
                android:text="25"
                android:textColor="#08AC0F"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/percentage_vector"
                android:textSize="@dimen/_12ssp" />


            <TextView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_serif_display"
                android:text="OFF"
                android:textColor="#08AC0F"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>