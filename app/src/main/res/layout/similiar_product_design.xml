<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_255sdp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_238sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/productImage"
                    android:layout_width="140dp"
                    android:layout_height="143dp"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="12dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
                    app:srcCompat="@drawable/ic_launcher_background" />


                <TextView
                    android:id="@+id/txtBrandName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/dm_serif_display"
                    android:text="Brand name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp" />


                <TextView
                    android:id="@+id/txtProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="Product name"
                    android:textColor="#877D7D"
                    android:textSize="@dimen/_13ssp"
                    android:translationY="-5dp" />


                <LinearLayout
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_19sdp"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:background="@drawable/rating_shape"
                    android:orientation="horizontal"
                    android:translationY="-5dp">


                    <TextView
                        android:id="@+id/txt_rating_PD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:drawableEnd="@drawable/star_vector"
                        android:drawablePadding="1dp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="4.9"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="@dimen/_6sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginTop="2.50dp"
                        android:background="@drawable/raw_vector" />


                    <TextView
                        android:id="@+id/txt_rating_count_PD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="1000"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:id="@+id/txt_product_selling_price_PD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/rupee_vector"
                        android:fontFamily="@font/dm_serif_display"
                        android:text="5999"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16ssp" />


                    <TextView
                        android:id="@+id/text_product_original_price_PD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:background="@drawable/columan_vector"
                        android:drawableStart="@drawable/rupee_silver_vector"
                        android:fontFamily="@font/brygada_1918"
                        android:text="6999"
                        android:textColor="#736F6F"
                        android:textSize="@dimen/_13ssp" />


                </LinearLayout>

                <LinearLayout
                    android:translationY="-5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtDiscount_PD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:drawableEnd="@drawable/percentage_vector"
                        android:fontFamily="@font/brygada_1918"
                        android:text="25"
                        android:textColor="#08AC0F"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="off"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="#08AC0F"
                        android:textStyle="bold"/>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>



</LinearLayout>