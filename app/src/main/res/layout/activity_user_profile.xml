<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user_profile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_230sdp"
        android:orientation="vertical"
        android:translationY="-34dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_210sdp"
            app:cardBackgroundColor="#6BE7F6"
            app:cardCornerRadius="@dimen/_40sdp"
            app:cardElevation="@dimen/_5sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_76sdp"
                android:orientation="horizontal">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:visibility="gone"
                    android:id="@+id/maleImage"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:src="@drawable/logo_men" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:visibility="gone"
                    android:id="@+id/femaleImage"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_105sdp"
                    android:src="@drawable/logo_female" />


            </LinearLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/selectImage"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:src="@drawable/person2"
                android:layout_marginTop="@dimen/_16sdp"/>


            <TextView
                android:id="@+id/txtSelectImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_173sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="Edit profile"
                android:textAlignment="center"
                android:textColor="#052BFB"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_390sdp"
        android:orientation="vertical"
        android:translationY="-50dp">


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_370sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_30sdp"
            app:cardElevation="@dimen/_5sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_19sdp"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="First Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />


                <EditText
                    android:id="@+id/userName"
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:inputType="text"
                    android:paddingTop="@dimen/_10sdp"
                    android:text=""
                    android:textSize="@dimen/_17ssp"
                    android:translationY="-5dp" />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_19sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="Mobile number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:fontFamily="@font/dm_serif_display"
                        android:text="+91"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold"
                        android:translationX="@dimen/_20sdp"
                        android:translationY="-10dp" />


                    <EditText
                        android:id="@+id/userMobileNo"
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:inputType="number"
                        android:paddingStart="@dimen/_44sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:text=""
                        android:textSize="@dimen/_17ssp"
                        android:translationX="-50dp"
                        android:translationY="-5dp" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_19sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />


                <TextView
                    android:id="@+id/userEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_19sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp" />



                <RadioGroup
                    android:id="@+id/radioGroupGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioButtonMale"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="30dp"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/radio_selector"
                        android:button="@color/transparent" />


                    <TextView
                        android:background="@drawable/male_vector"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_29sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:translationY="-36dp"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_62sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="Male"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        android:translationY="-64dp"/>



                    <RadioButton
                        android:id="@+id/radioButtonFemale"
                        android:layout_marginLeft="@dimen/_130sdp"
                        android:layout_marginTop="2dp"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/radio_selector"
                        android:button="@color/transparent"
                        android:translationY="-110dp"/>


                    <TextView
                        android:background="@drawable/female_vector"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_138sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:translationY="-146dp"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_164sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="Female"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        android:translationY="-174dp"/>


                </RadioGroup>



            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpdate"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_37sdp"
        android:layout_gravity="center"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/dm_serif_display"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        android:translationY="-90dp" />


</LinearLayout>