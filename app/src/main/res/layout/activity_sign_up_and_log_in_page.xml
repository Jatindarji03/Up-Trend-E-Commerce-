                <!--                android:layout_gravity="center"-->
                <!--                app:SpinKit_Color="#FBC215"/>-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40ssp" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</RelativeLayout>