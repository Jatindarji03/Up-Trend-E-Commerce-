<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cancel_order">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            app:cardBackgroundColor="#6BE7F6"
            app:cardElevation="@dimen/_6sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/close_btn_cancel"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:drawableStart="@drawable/back11_vector"
                    android:paddingStart="7dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/dm_serif_display"
                    android:text="Request Cancellation"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18ssp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_45sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_98sdp"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    app:cardElevation="@dimen/_6sdp">


                    <TextView
                        android:id="@+id/productNameCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="Product Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />


                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/historyProductImageCancel"
                        android:layout_width="83dp"
                        android:layout_height="86dp"
                        android:layout_marginLeft="250dp"
                        android:layout_marginTop="11dp"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
                        app:srcCompat="@drawable/ic_launcher_background" />


                    <LinearLayout
                        android:visibility="visible"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/productSize"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="1dp"
                            android:fontFamily="@font/brygada_1918"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />


<!--                        <TextView-->
<!--                            android:layout_width="@dimen/_5sdp"-->
<!--                            android:layout_height="@dimen/_20sdp"-->
<!--                            android:layout_marginLeft="1dp"-->
<!--                            android:layout_marginTop="1dp"-->
<!--                            android:fontFamily="@font/brygada_1918"-->
<!--                            android:text=","-->
<!--                            android:textAlignment="center"-->
<!--                            android:textColor="@color/black"-->
<!--                            android:textSize="@dimen/_13ssp" />-->


                        <TextView
                            android:id="@+id/productColour"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="1dp"
                            android:fontFamily="@font/brygada_1918"
                            android:text="white"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />


                        <TextView
                            android:layout_width="@dimen/_5sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="3dp"
                            android:fontFamily="@font/brygada_1918"
                            android:text="|"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/brygada_1918"
                            android:text="Qty :"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />


                        <TextView
                            android:id="@+id/txtQty"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:fontFamily="@font/brygada_1918"
                            android:text="5"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/productPriceCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="65dp"
                        android:drawableStart="@drawable/rupee_vector"
                        android:fontFamily="@font/brygada_1918"
                        android:text="5999"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="430dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    app:cardElevation="@dimen/_6sdp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="Reason For Cancellation"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />


                    <RadioGroup
                        android:id="@+id/reasonRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp">


                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:fontFamily="@font/brygada_1918"
                            android:paddingStart="@dimen/_4sdp"
                            android:text="I want to change address for the order"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />


                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:fontFamily="@font/brygada_1918"
                            android:paddingStart="@dimen/_4sdp"
                            android:text="Price for the product has decreased"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />


                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:fontFamily="@font/brygada_1918"
                            android:paddingStart="@dimen/_4sdp"
                            android:text="I want to convert my order to Prepaid"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />


                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:fontFamily="@font/brygada_1918"
                            android:paddingStart="@dimen/_4sdp"
                            android:text="Expected delivery time is very long"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />


                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:fontFamily="@font/brygada_1918"
                            android:paddingStart="@dimen/_4sdp"
                            android:text="I have change my mind"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />


                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:fontFamily="@font/brygada_1918"
                            android:paddingStart="@dimen/_4sdp"
                            android:text="I have purchased the product elsewhere"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />


                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:fontFamily="@font/brygada_1918"
                            android:paddingStart="@dimen/_4sdp"
                            android:text="I want to change my phone number"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />


                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:fontFamily="@font/brygada_1918"
                            android:paddingStart="@dimen/_4sdp"
                            android:text="I want to cancel due to product quality issues"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />

                    </RadioGroup>


                    <EditText

                        android:id="@+id/txtComment"
                        android:layout_width="@dimen/_270sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="310dp"
                        android:background="@drawable/edittext_touch_effect"
                        android:fontFamily="@font/brygada_1918"
                        android:gravity="start"
                        android:hint="Comment (optional)"
                        android:imeOptions="actionDone"
                        android:importantForAutofill="no"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_20sdp"
                        android:textSize="17sp" />


                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/continue_btn_splash"
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_background"
                    android:fontFamily="@font/dm_serif_display"
                    android:text="Continue"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>
