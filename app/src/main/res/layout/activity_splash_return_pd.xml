<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".splash_return_pd">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="#6BE7F6">


            <TextView
                android:id="@+id/back_btn55"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:drawableStart="@drawable/back11_vector"
                android:paddingStart="7dp" />


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/sucess_anim"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="@dimen/_170sdp"
                android:layout_centerInParent="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/anim2" />


            <TextView
                android:id="@+id/txtCancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_200sdp"
                android:fontFamily="@font/gelasio"
                android:gravity="center"
                android:text="Cancellation Confirmed..."
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtReturn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_200sdp"
                android:fontFamily="@font/gelasio"
                android:gravity="center"
                android:text="Return Confirmed..."
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                android:visibility="gone" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/keep_shopping"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="5dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="5dp"
                app:cardElevation="3dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="Keep Shopping"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />


                <TextView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_262sdp"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/arrow_vector"
                    android:paddingStart="7dp" />


            </androidx.cardview.widget.CardView>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/view_all_orders"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:translationY="-5dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="5dp"
                app:cardElevation="3dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="View All Orders"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />


                <TextView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_262sdp"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/arrow_vector"
                    android:paddingStart="7dp" />


            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>