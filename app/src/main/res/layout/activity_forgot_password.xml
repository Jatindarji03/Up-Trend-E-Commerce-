<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:background="@drawable/yeallw_top">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/fire"
            app:lottie_loop="true" />

        <ImageView
            android:layout_width="@dimen/_76sdp"
            android:layout_height="@dimen/_76sdp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:src="@drawable/fire" />

        <TextView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_117sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:fontFamily="@font/miltonian_tattoo"
            android:text="Up Trend"
            android:textColor="@color/black"
            android:textSize="@dimen/_26ssp" />

    </RelativeLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_95sdp"
        tools:context=".forgot_password">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_330sdp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="@dimen/_50sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_20sdp"
                app:cardMaxElevation="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="@string/forgetpass"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_70sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="@string/massage1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_19sdp"
                    android:layout_marginTop="@dimen/_130sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="@string/enter1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />


                <EditText
                    android:id="@+id/txtEmail"
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_150sdp"
                    android:background="@drawable/edittext_touch_effect"
                    android:drawableStart="@drawable/email_vector_effect"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/gelasio"
                    android:hint="@string/email"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:paddingStart="10dp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:textSize="18sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="270dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_240sdp"
                    android:background="#43C5FF"
                    android:fontFamily="@font/gelasio"
                    android:text="@string/requestLink"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/shine_btn1"
                    android:layout_width="30dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_240sdp"
                    android:background="@drawable/shine_btn" />


                <TextView
                    android:id="@+id/back_To_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_84sdp"
                    android:layout_marginTop="@dimen/_290sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="@string/back1"
                    android:textColor="#049FE4"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/instruction_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:drawableEnd="@drawable/down_key"
                    android:fontFamily="@font/brygada_1918"
                    android:text="@string/Instruction"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_225sdp"
                android:layout_marginLeft="17dp"
                android:visibility="gone"
                app:cardBackgroundColor="#9BE7F1"
                app:cardCornerRadius="10dp">


                <TextView
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="@string/Instruction1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_55sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="@string/Instruction2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_95sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="@string/Instruction3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_135sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="@string/Instruction4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_176sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="@string/Instruction5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp" />


        </LinearLayout>

    </ScrollView>
</RelativeLayout>
