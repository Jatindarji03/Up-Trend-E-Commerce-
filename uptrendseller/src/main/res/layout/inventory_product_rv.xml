<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="1dp"
    android:id="@+id/cardViewContainer"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/product_image_RV"
            android:layout_width="100dp"
            android:layout_height="103dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            app:srcCompat="@drawable/ic_launcher_background" />


        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_below="@id/product_image_RV"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_image_RV"
                android:layout_marginStart="1dp"
                android:layout_toEndOf="@id/product_image_RV"
                android:fontFamily="@font/brygada_1918"
                android:text="Qty :"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />



            <TextView
                android:id="@+id/product_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_image_RV"
                android:layout_marginStart="1dp"
                android:layout_toEndOf="@id/product_image_RV"
                android:fontFamily="@font/brygada_1918"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />


        </LinearLayout>



        <TextView
            android:id="@+id/deliveredIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="318dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:background="@drawable/delivered_vector" />



        <TextView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_260sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:drawableStart="@drawable/arrow_vector"
            android:paddingStart="7dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_90sdp">

            <TextView
                android:id="@+id/product_name_RV"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@id/product_image_RV"
                android:fontFamily="@font/brygada_1918"
                android:text="Product Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp" />


            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@id/product_image_RV"
                android:fontFamily="@font/dm_serif_display"
                android:text="User Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_toEndOf="@id/product_image_RV"
                android:fontFamily="@font/brygada_1918"
                android:text="Succesfully Payment"
                android:textColor="#02BA0A"
                android:textSize="@dimen/_13ssp" />


            <TextView
                android:translationY="-5dp"
                android:id="@+id/productTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/product_image_RV"
                android:drawableStart="@drawable/rupee_vector24"
                android:drawableTint="#02BA0A"
                android:fontFamily="@font/brygada_1918"
                android:text="5999"
                android:textColor="#02BA0A"
                android:textSize="@dimen/_14ssp" />


            <LinearLayout
                android:translationY="-7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19.20dp"
                android:layout_toEndOf="@id/product_image_RV"
                android:fontFamily="@font/brygada_1918"
                android:text="Status :"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />



                <TextView
                    android:id="@+id/productStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_toEndOf="@id/product_image_RV"
                    android:fontFamily="@font/brygada_1918"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />


            </LinearLayout>

            <TextView
                android:id="@+id/orderDate"
                android:translationY="-6dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="170dp"
                android:layout_toEndOf="@id/product_image_RV"
                android:fontFamily="@font/brygada_1918"
                android:text="26/6/2004"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />



        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>