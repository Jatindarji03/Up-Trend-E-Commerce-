<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:background="@drawable/blue_top"
            android:orientation="vertical"
            android:translationX="-1.20dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_21sdp"
                android:fontFamily="@font/chonburi"
                android:gravity="center"
                android:text="Add Product Details"
                android:textColor="@color/black"
                android:textSize="@dimen/_21ssp" />


        </LinearLayout>


        <TextView
            android:id="@+id/save_manufacture_txt"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_137sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableEnd="@drawable/smiley_emoji_vector"
            android:fontFamily="@font/brygada_1918"
            android:gravity="center"
            android:text="Add product"
            android:textColor="#042AFF"
            android:textSize="@dimen/_19ssp"
            android:textStyle="bold" />


    </LinearLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_100sdp"
        tools:context=".add_product_manufacture_details">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_28sdp"
            android:fontFamily="@font/brygada_1918"
            android:text="Generic Name"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/generic_name"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:background="@drawable/edittext_touch_effect"
            android:fontFamily="@font/brygada_1918"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp" />


            <TextView
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginLeft="@dimen/_28sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="Country of Origin :-"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="India"
                android:textStyle="bold"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_17ssp" />


            <TextView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginLeft="@dimen/_28sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="Manufacture's Details"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />



            <EditText
                android:id="@+id/manufacture_details"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:background="@drawable/edittext_touch_effect"
                android:fontFamily="@font/brygada_1918"
                android:gravity="start"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_13sdp"
                android:paddingTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />


            <TextView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginLeft="@dimen/_28sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="Packer's Details"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />



            <EditText
                android:id="@+id/Packers_details"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:background="@drawable/edittext_touch_effect"
                android:fontFamily="@font/brygada_1918"
                android:imeOptions="actionDone"
                android:gravity="start"
                android:importantForAutofill="no"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_13sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"/>







        </LinearLayout>


    </ScrollView>


</RelativeLayout>