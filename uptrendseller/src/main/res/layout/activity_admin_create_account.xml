<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_create_account">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/_315sdp"
            android:layout_height="@dimen/_80sdp"
            android:background="#6BE7F6">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/fire" />

            <ImageView
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:src="@drawable/fire" />

            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_85sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:fontFamily="@font/miltonian_tattoo"
                android:text="Up Trend"
                android:textColor="@color/black"
                android:textSize="@dimen/_22ssp" />


            <TextView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_193sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:fontFamily="@font/miltonian_tattoo"
                android:text="Seller"
                android:textColor="@color/black"
                android:textSize="@dimen/_22ssp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_21sdp"
                android:layout_marginLeft="30.92dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="#5EE2F3"
                android:fontFamily="@font/dm_serif_display"
                android:gravity="center"                android:text="1"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="28dp"
                android:layout_height="2dp"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="25dp"
                android:background="#A5AAA6" />


            <TextView
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_21sdp"
                android:layout_marginLeft="88dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="#BBBFBC"
                android:fontFamily="@font/dm_serif_display"
                android:gravity="center"                       android:text="2"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="28dp"
                android:layout_height="2dp"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="25dp"
                android:background="#A5AAA6" />


            <TextView
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_21sdp"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="#BBBFBC"
                android:fontFamily="@font/dm_serif_display"
                android:gravity="center"                       android:text="3"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="28dp"
                android:layout_height="2dp"
                android:layout_marginLeft="172dp"
                android:layout_marginTop="25dp"
                android:background="#A5AAA6" />


            <TextView
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_21sdp"
                android:layout_marginLeft="202dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="#BBBFBC"
                android:fontFamily="@font/dm_serif_display"
                android:gravity="center"                       android:text="4"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressbar_create_account"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="@dimen/_210sdp"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/circular" />

            <TextView
                android:id="@+id/text_percentage_create_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_235sdp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/brygada_1918"
                android:text="0%"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/brygada_1918"
                android:text="Step 1"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />



            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_68sdp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/brygada_1918"
                android:text="Step 2"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_115sdp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/brygada_1918"
                android:text="Step 3"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_163sdp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/brygada_1918"
                android:text="Step 4"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />




        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/logIn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="Log in"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                android:translationX="@dimen/_50sdp" />


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_370sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="#C8F0F4"
                android:translationX="115dp"
                app:cardCornerRadius="@dimen/_15sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="Sign up"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_300sdp"
                android:backgroundTint="@color/white"
                android:translationX="-375dp"
                android:translationY="@dimen/_60sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardElevation="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/name_create_account"
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/edittext_touch_effect"
                        android:drawableStart="@drawable/person_vector_effect"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:hint="First and Last Name"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textSize="18sp" />


                    <EditText
                        android:id="@+id/mobileno_create_account"
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_11sdp"
                        android:background="@drawable/edittext_touch_effect"
                        android:drawableStart="@drawable/phone_vector_effect"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:hint="Mobile No"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingStart="10dp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textSize="18sp" />


                    <EditText
                        android:id="@+id/email_create_account"
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_11sdp"
                        android:background="@drawable/edittext_touch_effect"
                        android:drawableStart="@drawable/email_vector_effect"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:hint="email"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textSize="18sp" />


                    <EditText
                        android:id="@+id/password_create_account"
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_11sdp"
                        android:background="@drawable/edittext_touch_effect"
                        android:drawableStart="@drawable/lock_vector_effect"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:hint="Password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:paddingStart="10dp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/password_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:textColor="#F43E05"
                        android:textSize="@dimen/_10ssp" />


                    <CheckBox
                        android:id="@+id/checkbox_create_account"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_13sdp"
                        android:fontFamily="@font/gelasio"
                        android:text="show password"
                        android:textSize="@dimen/_13ssp" />

                </LinearLayout>



            </androidx.cardview.widget.CardView>




        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_create_account_admin"
            android:layout_width="140dp"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/gelasio"
            android:text="Sign up"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:translationX="-10dp"
            android:translationY="-60dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shine_btn_ca"
            android:layout_width="19dp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/shine_btn"
            android:translationX="-75dp"
            android:translationY="-105dp" />



        <TextView
            android:translationY="-105dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_55sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:fontFamily="@font/brygada_1918"
            android:text="Already a member?"
            android:textSize="@dimen/_14ssp" />


        <TextView
            android:id="@+id/login_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_67sdp"
            android:fontFamily="@font/brygada_1918"
            android:text="LOGIN"
            android:textColor="@color/black"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            android:translationY="-139dp" />

    </LinearLayout>

</ScrollView>