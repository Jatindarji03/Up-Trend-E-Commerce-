<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/_315sdp"
            android:layout_height="@dimen/_80sdp"
            android:background="#6BE7F6">


            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/fire" />


            <ImageView
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:src="@drawable/fire" />

            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_85sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:fontFamily="@font/miltonian_tattoo"
                android:text="Up Trend"
                android:textColor="@color/black"
                android:textSize="@dimen/_22ssp" />


            <TextView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_193sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:fontFamily="@font/miltonian_tattoo"
                android:text="Seller"
                android:textColor="@color/black"
                android:textSize="@dimen/_22ssp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="@dimen/_21sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:layout_marginLeft="30.92dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#5EE2F3"
                    android:fontFamily="@font/dm_serif_display"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="58dp"
                    android:layout_marginTop="25dp"
                    android:background="#5EE2F3" />


                <TextView
                    android:layout_width="@dimen/_21sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:layout_marginLeft="88dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#5EE2F3"
                    android:fontFamily="@font/dm_serif_display"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="25dp"
                    android:background="#5EE2F3" />


                <TextView
                    android:layout_width="@dimen/_21sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:layout_marginLeft="145dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#5EE2F3"
                    android:fontFamily="@font/dm_serif_display"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="172dp"
                    android:layout_marginTop="25dp"
                    android:background="#A5AAA6" />


                <TextView
                    android:layout_width="@dimen/_21sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:layout_marginLeft="202dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#BBBFBC"
                    android:fontFamily="@font/dm_serif_display"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/progressbar_seller_info"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="@dimen/_210sdp"
                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/circular" />

                <TextView
                    android:id="@+id/text_percentage_seller_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_233sdp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="0%"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="Step 1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_68sdp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="Step 2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_115sdp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="Step 3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_163sdp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="Step 4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:backgroundTint="#04DFFB"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_5sdp">

                    <TextView
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="37dp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="‖  SELLER INFORMATION  ‖"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_200sdp"
        android:background="@color/white"
        tools:context=".seller_information">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginRight="@dimen/_90sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="Seller Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/seller_name"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="48dp"
                android:background="@drawable/edittext_touch_effect"
                android:fontFamily="@font/brygada_1918"
                android:hint="Seller Full Name"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginRight="@dimen/_20sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="Set a name for your 'UpTrend Store'"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/store_name_seller"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="48dp"
                android:background="@drawable/edittext_touch_effect"
                android:fontFamily="@font/brygada_1918"
                android:hint="Enter Display Name"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginRight="@dimen/_75sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="Pickup Pincode"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/pincode_seller"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="49dp"
                android:background="@drawable/edittext_touch_effect"
                android:fontFamily="@font/brygada_1918"
                android:hint="Enter Pickup Pincode"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="6"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />


            <TextView
                android:id="@+id/pincode_msg"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_66sdp"
                android:fontFamily="@font/brygada_1918"
                android:textColor="#F43E05"
                android:textSize="@dimen/_12ssp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginRight="@dimen/_60sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="Store Address Details"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/address1_seller"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_80sdp"
                android:background="@drawable/edittext_touch_effect"
                android:fontFamily="@font/brygada_1918"
                android:gravity="start"
                android:hint="Shop No, Building Name, Floor"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_13sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />


            <EditText
                android:id="@+id/address2_seller"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/edittext_touch_effect"
                android:fontFamily="@font/brygada_1918"
                android:gravity="start"
                android:hint="Road Name, Area, Colony"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_13sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="@dimen/_90sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="Select State"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/spinner_state1"
                style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                app:boxCornerRadiusTopStart="@dimen/_10sdp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/txtState"
                    android:layout_width="@dimen/_260sdp"
                    android:layout_height="50dp"
                    android:background="#3303A9F4"
                    android:fontFamily="@font/gelasio"
                    android:hint="select state"
                    android:inputType="none"
                    android:textSize="@dimen/_13sdp" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="@dimen/_92sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="Select City"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                app:boxCornerRadiusTopStart="@dimen/_10sdp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/txtCity"
                    android:layout_width="@dimen/_260sdp"
                    android:layout_height="50dp"
                    android:background="#3303A9F4"
                    android:fontFamily="@font/gelasio"
                    android:hint="select city"
                    android:inputType="none"
                    android:textSize="@dimen/_13sdp" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_seller_info"
                android:layout_width="230dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:background="#43C5FF"
                android:fontFamily="@font/gelasio"
                android:text="next"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/shine_btn2"
                android:layout_width="40dp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/shine_btn"
                android:translationX="-135dp"
                android:translationY="-47dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
