<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/_315sdp"
        android:layout_height="@dimen/_80sdp"
        android:background="#6BE7F6">


        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/fire" />


        <ImageView
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:src="@drawable/fire" />

        <TextView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_85sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:fontFamily="@font/miltonian_tattoo"
            android:text="Up Trend"
            android:textColor="@color/black"
            android:textSize="@dimen/_22ssp" />


        <TextView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_193sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:fontFamily="@font/miltonian_tattoo"
            android:text="Seller"
            android:textColor="@color/black"
            android:textSize="@dimen/_22ssp" />


    </RelativeLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_85sdp"
        tools:context=".email_verification">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="@dimen/_21sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:layout_marginLeft="30.92dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#5EE2F3"
                    android:fontFamily="@font/dm_serif_display"
                    android:gravity="center"                android:text="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="58dp"
                    android:layout_marginTop="25dp"
                    android:background="#5EE2F3" />


                <TextView
                    android:layout_width="@dimen/_21sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:layout_marginLeft="88dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#5EE2F3"
                    android:fontFamily="@font/dm_serif_display"
                    android:gravity="center"                       android:text="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="25dp"
                    android:background="#A5AAA6" />


                <TextView
                    android:layout_width="@dimen/_21sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:layout_marginLeft="145dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#BBBFBC"
                    android:fontFamily="@font/dm_serif_display"
                    android:gravity="center"                       android:text="3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="172dp"
                    android:layout_marginTop="25dp"
                    android:background="#A5AAA6" />


                <TextView
                    android:layout_width="@dimen/_21sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:layout_marginLeft="202dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#BBBFBC"
                    android:fontFamily="@font/dm_serif_display"
                    android:gravity="center"                       android:text="4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/progressbar_email_verification"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="@dimen/_210sdp"
                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/circular" />

                <TextView
                    android:id="@+id/text_percentage_email_verification"                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_233sdp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="0%"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="Step 1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />



                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_68sdp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="Step 2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_115sdp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="Step 3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_163sdp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="Step 4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />




            </RelativeLayout>




            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_310sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="Please verify your email"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="We've sent an email to"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp" />

                    <TextView
                        android:id="@+id/txt_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/brygada_1918"
                        android:text="email"
                        android:textColor="#052BFD"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/brygada_1918"
                        android:text="to verify your email address and activate your account. The link in the email will expire in 24 hours."
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp" />


                    <TextView
                        android:id="@+id/txt_verify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/brygada_1918"
                        android:text=""
                        android:textSize="@dimen/_17ssp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_verification"
                        android:layout_width="200dp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:background="#43C5FF"
                        android:fontFamily="@font/gelasio"
                        android:text="Verify email"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/shine_btn1"
                        android:layout_width="40dp"
                        android:layout_height="@dimen/_38sdp"
                        android:background="@drawable/shine_btn"
                        android:translationX="-121dp"
                        android:translationY="-50dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_90sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/instruction_click1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:drawableEnd="@drawable/down_key"
                    android:fontFamily="@font/brygada_1918"
                    android:text="Instruction"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_215sdp"
                android:visibility="gone"
                app:cardBackgroundColor="#9BE7F1"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="1. You can check your email."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="2. Click verify email and check your email."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="3. Open your email and check the link of email verification."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="4. Click the link and open our app."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="5. You can see your email is verified in green text."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />


                    <TextView
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="6. You can automatically move to next activity(please few second wait....)."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
