<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".agreement_seller">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/double_tick1" />

        <TextView
            android:layout_marginTop="@dimen/_130sdp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:text="Terms &amp;"
            android:textStyle="bold"
            android:fontFamily="@font/alegreya"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_25sdp"
            android:textSize="@dimen/_35ssp"/>

        <TextView
            android:layout_marginTop="@dimen/_165sdp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:text="Conditions"
            android:textStyle="bold"
            android:fontFamily="@font/alegreya"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_25sdp"
            android:textSize="@dimen/_35ssp"/>


        <TextView
            android:layout_marginTop="@dimen/_210sdp"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:text="The Seller agrees that Foree may use, process and/or host seller confidential information/data such as CNIC, Bank Account Number &amp; other bank account credentials and Contact Number etc."
            android:fontFamily="@font/gelasio"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_25sdp"
            android:textSize="@dimen/_13ssp"/>


        <TextView
            android:layout_marginTop="@dimen/_305sdp"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:text="The Seller also agrees that Foree has the debit Authority; Foree may debit money from seller account/wallet/card etc. for the processing of transactions."
            android:fontFamily="@font/gelasio"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_25sdp"
            android:textSize="@dimen/_13ssp"/>

        <TextView
            android:id="@+id/terms_txt"
            android:layout_marginTop="@dimen/_375sdp"
            android:layout_width="@dimen/_260sdp"
            android:layout_height="wrap_content"
            android:text="Read full Terms &amp; Conditions"
            android:fontFamily="@font/gelasio"
            android:textStyle="bold"
            android:textColor="#048DFA"
            android:layout_marginLeft="@dimen/_25sdp"
            android:textSize="@dimen/_13ssp"/>

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_marginTop="@dimen/_420sdp"
            android:layout_marginLeft="@dimen/_22sdp"
            android:layout_width="@dimen/_265sdp"
            android:layout_height="wrap_content"
            android:text="I agree with the Terms and Conditions"
            android:fontFamily="@font/gelasio"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"/>

        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_marginTop="@dimen/_445sdp"
            android:layout_marginLeft="@dimen/_22sdp"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text="I agree with Foree"
            android:fontFamily="@font/gelasio"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"/>



        <TextView
            android:id="@+id/privacy_txt"
            android:layout_marginTop="@dimen/_454sdp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="privacy Policy"
            android:fontFamily="@font/gelasio"
            android:textStyle="bold"
            android:textColor="#048DFA"
            android:layout_marginLeft="@dimen/_162sdp"
            android:textSize="@dimen/_13ssp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="#43C5FF"
            android:text="Continue"
            android:fontFamily="@font/dm_serif_display"
            android:layout_marginLeft="@dimen/_27sdp"
            android:textSize="@dimen/_16ssp"
            android:layout_marginTop="@dimen/_520sdp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shine_button"
            android:layout_width="20dp"
            android:layout_height="@dimen/_36sdp"

            android:layout_marginLeft="@dimen/_8sdp"
            android:background="@drawable/shine_btn"
            android:layout_marginTop="@dimen/_520sdp" />



    </RelativeLayout>

</RelativeLayout>