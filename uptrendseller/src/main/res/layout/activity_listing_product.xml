<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:background="@drawable/blue_top"
            android:orientation="vertical"
            android:translationX="-1.20dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_21sdp"
                android:fontFamily="@font/chonburi"
                android:gravity="center"
                android:text="Product Category"
                android:textColor="@color/black"
                android:textSize="@dimen/_21ssp" />


        </LinearLayout>


        <TextView
            android:id="@+id/save_category_txt"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_140sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/brygada_1918"
            android:gravity="center"
            android:text="Save &amp; Next"
            android:textColor="#042AFF"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />


    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_100sdp"
        tools:context=".listing_product">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginLeft="@dimen/_28sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="Select selling product category"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/Text_input_layout"
                style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                android:layout_width="@dimen/_245sdp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                app:boxCornerRadiusTopStart="@dimen/_10sdp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/category"
                    android:layout_width="@dimen/_245sdp"
                    android:layout_height="50dp"
                    android:background="#3303A9F4"
                    android:fontFamily="@font/brygada_1918"
                    android:hint="Select Category"
                    android:inputType="none"
                    android:textSize="@dimen/_13sdp" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginLeft="@dimen/_28sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:fontFamily="@font/brygada_1918"
                android:text="Select selling product subcategory"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/Text_input_layout2"
                style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                android:layout_width="@dimen/_245sdp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                app:boxCornerRadiusTopStart="@dimen/_10sdp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/subcategory"
                    android:layout_width="@dimen/_245sdp"
                    android:layout_height="50dp"
                    android:background="#3303A9F4"
                    android:fontFamily="@font/brygada_1918"
                    android:hint="Select Subcategory"
                    android:inputType="none"
                    android:textSize="@dimen/_13sdp" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/using_txt"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginLeft="@dimen/_28sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:drawableEnd="@drawable/down_key"
                android:drawableTint="#048CF8"
                android:fontFamily="@font/brygada_1918"
                android:text="Using tutorial"
                android:textColor="#048CF8"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/using_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_240sdp">

                    <VideoView

                        android:id="@+id/videoView"
                        android:layout_width="@dimen/_270sdp"
                        android:layout_height="@dimen/_230sdp"
                        android:layout_gravity="center" />
                </FrameLayout>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</RelativeLayout>
