<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/_315sdp"
        android:layout_height="@dimen/_80sdp"
        android:background="#6BE7F6">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/fire"
            app:lottie_loop="true" />

        <ImageView
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:src="@drawable/fire" />

        <TextView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_85sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:fontFamily="@font/miltonian_tattoo"
            android:text="Up Trend"
            android:textColor="@color/black"
            android:textSize="@dimen/_22ssp" />


        <TextView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_193sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:fontFamily="@font/miltonian_tattoo"
            android:text="Seller"
            android:textColor="@color/black"
            android:textSize="@dimen/_22ssp" />


    </RelativeLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_85sdp"
        tools:context=".forget_pass_seller">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_350sdp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="@dimen/_45sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_20sdp"
                app:cardMaxElevation="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_22sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="Forgot your password"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="Enter the email address you used when you joined and we,ll send you instruction to reset your password."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="For security reasons, we do NOT store your password.So rest assured that we will never send your password via email."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_19sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="Email address"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/email_forget"
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:background="@drawable/edittext_touch_effect"
                        android:drawableStart="@drawable/email_vector_effect"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:hint="Email"
                        android:imeOptions="actionDone"
                        android:inputType="textEmailAddress"
                        android:paddingStart="10dp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_forget"
                            android:layout_width="270dp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:background="#43C5FF"
                            android:fontFamily="@font/gelasio"
                            android:text="Request reset link"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/shine_btn1"
                            android:layout_width="30dp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_27sdp"
                            android:background="@drawable/shine_btn"
                            android:translationX="-300dp" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/back_To_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_84sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/brygada_1918"
                        android:text="Back to log in"
                        android:textColor="#049FE4"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/instruction_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:drawableEnd="@drawable/down_key"
                    android:fontFamily="@font/brygada_1918"
                    android:text="Instruction"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_225sdp"
                android:layout_marginLeft="17dp"
                android:visibility="gone"
                app:cardBackgroundColor="#9BE7F1"
                app:cardCornerRadius="10dp">


                <TextView
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="1. You enter the email of your log in id here."
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_55sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="2. Click reset button and check your email."
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_95sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="3. Open your email and check the link of reset password."
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_135sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="4. Click the link and reset your password."
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_176sdp"
                    android:fontFamily="@font/brygada_1918"
                    android:text="5. You can fill your new password in log in."
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp" />


        </LinearLayout>


    </ScrollView>

</RelativeLayout>
