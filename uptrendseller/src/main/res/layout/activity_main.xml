<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_nav"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/backgroundLayoutWhite"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/splash_bg"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:rotation="-20"
            android:rotationY="20"
            android:src="@drawable/crown_img24" />


        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="24dp"
            android:fontFamily="@font/miltonian_tattoo"
            android:text="Up Trend"
            android:textColor="@color/black"
            android:textSize="@dimen/_30ssp" />


        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:fontFamily="@font/miltonian_tattoo"
            android:text="Up Trend"
            android:textColor="@color/white"
            android:textSize="@dimen/_27ssp" />


        <TextView
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/miltonian_tattoo"
            android:text="Seller"
            android:textColor="@color/black"
            android:textSize="@dimen/_45ssp" />


        <TextView
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginLeft="113dp"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/miltonian_tattoo"
            android:text="Seller"
            android:textColor="@color/white"
            android:textSize="@dimen/_42ssp" />


    </RelativeLayout>


    <TextView
        android:id="@+id/backgroundLayoutWhite2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/splash_bg"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spinKitView"
        style="@style/SpinKitView.ThreeBounce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:SpinKit_Color="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.756" />


</androidx.constraintlayout.motion.widget.MotionLayout>










